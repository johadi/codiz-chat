{
  "name": "codizchat",
  "version": "1.0.0",
  "description": "Developers chat application",
  "main": "index.js",
  "scripts": {
    "server": "nodemon --watch server --exec babel-node -- server/server.js",
    "start": "npm run build",
    "build:dev": "webpack-dev-server --mode development",
    "test": "export NODE_ENV=test && nyc --reporter=html --reporter=text mocha --compilers js:babel-register server/tests/**/*.test.js --exit",
    "remove-dist": "rimraf ./dist && rimraf ./.idea && rimraf ./.git",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "build:html": "npm install && node tools/buildTools/buildHtml.js",
    "heroku-prebuild": "npm run clean-dist && npm run build:html",
    "heroku-postbuild": "webpack --mode production",
    "build:prod": "webpack -p --config ./webpack.config.js --progress",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage2": "nyc -e .jsx report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "developers",
    "chat"
  ],
  "author": "johadi",
  "license": "MIT",
  "engines": {
    "node": "9.4.0"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "color": "^2.0.1",
    "compression": "^1.7.2",
    "css-loader": "^0.28.10",
    "dotenv": "^4.0.0",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^4.0.3",
    "jsonwebtoken": "^8.2.0",
    "keymirror": "^0.1.1",
    "lodash": "^4.17.5",
    "mongoose": "^5.0.10",
    "morgan": "^1.9.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.12.1",
    "react": "^16.2.0",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^6.0.7",
    "serve-favicon": "^2.4.5",
    "socket.io": "^2.0.4",
    "style-loader": "^0.19.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.6.0",
    "supertest": "^3.0.0"
  }
}
